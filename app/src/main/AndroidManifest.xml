<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.mchllngr.quickopen">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".module.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".module.settings.SettingsActivity"
            android:label="@string/settings_title"
            android:parentActivityName=".module.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".module.about.AboutActivity"
            android:label="@string/about_title"
            android:parentActivityName=".module.main.MainActivity"
            android:theme="@style/AppTheme" />

        <service android:name=".service.NotificationService" />

        <service android:name=".service.StartApplicationService" />

        <service
            android:name=".service.NotificationTileService"
            android:icon="@drawable/ic_speaker_notes_white_24px"
            android:label="@string/pref_notification_enabled_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <receiver android:name=".receiver.NotificationServiceStarter">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
